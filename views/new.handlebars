<form action="/restaurants" method="POST" class="container">
    <div class="row ">
        <div class="col">
            <label for="name">名稱</label>
            <input type="text" class="form-control" id="name" name="name" required>
        </div>
        <div class="col">
            <label for="name_en">英文名稱</label>
            <input type="text" class="form-control" id="name_en" name="name_en">
        </div>
        <div class="col">
            <label for="category">類型</label>
            <input type="text" class="form-control" id="category" name="category" required>
        </div>
    </div>
    <div class="row ">
        <div class="col">
            <label for="image">圖片</label>
            <input type="text" class="form-control" id="image" name="image">
        </div>
        <div class="col">
            <label for="location">位置</label>
            <input type="text" class="form-control" id="location" name="location">
        </div>
        <div class="col">
            <label for="phone">電話</label>
            <input type="text" class="form-control" id="phone" name="phone">
        </div>
    </div>
    <div class="row ">
        <div class="col-10">
            <label for="google_map">Google map 連結</label>
            <input type="text" class="form-control" id="google_map" name="google_map">
        </div>
        <div class="col">
            <label for="rating">評分</label>
            <input type="number" max="5" min="0" step="0.1" class="form-control" id="rating" name="rating">
        </div>
    </div>
    <div class="row">
        <div class="col">
            <label for="descriptnion">詳細資訊</label>
            <textarea type="text" class="form-control" id="descriptnion" name="descriptnion" rows="3"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
